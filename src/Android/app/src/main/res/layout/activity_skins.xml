<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radiogroup_skins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txt_selectedskin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imgv_selectedskin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp" />

            <TextView
                android:id="@+id/txt_skins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="@string/choose_your_pacman_skin"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/pacmanY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/pacman_yellow_right"
                android:buttonTint="@android:color/holo_orange_light"/>

            <RadioButton
                android:id="@+id/pacmanR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/pacman_red_right"
                android:buttonTint="@android:color/holo_orange_light"/>

            <RadioButton
                android:id="@+id/pacmanG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/pacman_green_right"
                android:buttonTint="@android:color/holo_orange_light"/>

            <RadioButton
                android:id="@+id/pacmanB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableRight="@drawable/pacman_blue_right"
                android:buttonTint="@android:color/holo_orange_light"/>
        </RadioGroup>

        <Button
            android:id="@+id/skins_btn_ok"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="Ok"
            android:textColor="#000000" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/holo_orange_light"
        app:itemTextColor="@color/darkgrey"
        app:menu="@menu/nav_menu"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>